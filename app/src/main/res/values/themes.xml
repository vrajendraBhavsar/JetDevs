<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeWorkMVP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Header text style -->
    <style name="HeaderTextStyle">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeaderTextStyle.Bold" parent="HeaderTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BaseSolidButtonRobotoBold16">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="BaseBorderedEditText">
        <item name="android:background">@drawable/shape_rounded_white_bordered_box</item>
    </style>

    <style name="TextInputStyleOutline" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">#E5E5E5</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="backgroundColor">@color/white</item>
        <item name="boxCornerRadiusTopStart">@dimen/dp_10</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dp_10</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dp_10</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dp_10</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/grey_one</item>
        <item name="android:textColor">@color/grey_two</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:paddingBottom">@dimen/dp_19</item>
        <item name="android:paddingTop">@dimen/dp_19</item>
        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
        <item name="colorControlActivated">@color/grey_two</item>
    </style>

</resources>